    "devDependencies": {
        "@rollup/plugin-terser": "^0.4.4",
        "@types/node": "^22.0.0",
        "@types/react": "^18.3.3",
        "@types/react-dom": "^18.3.0",
        "@types/styled-components": "^5.1.34",
        "@typescript-eslint/eslint-plugin": "^7.15.0",
        "@typescript-eslint/parser": "^7.15.0",
        "@vitejs/plugin-react-swc": "^3.5.0",
